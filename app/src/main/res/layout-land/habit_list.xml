<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardBackgroundColor="#FBFBF6"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp"
    app:contentPaddingBottom="0.2dp"
    app:contentPaddingTop="0.2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


        <TextView
            android:id="@+id/habit_field_1"
            style="@style/Widget.HabitTracker.HabitItemTextView"
            android:layout_width="198dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="12dp"
            android:layout_marginEnd="452dp"

            android:fontFamily="sans-serif-medium"
            android:text="2021-11-22"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/habit_field_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/habit_field_2"
            style="@style/Widget.HabitTracker.HabitItemTextView"
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:layout_alignTop="@+id/habit_field_1"
            android:layout_alignBottom="@+id/habit_field_1"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="0dp"
            android:layout_marginEnd="271dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="sans-serif-medium"
            android:text="20:00"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/habit_field_3"
            app:layout_constraintStart_toEndOf="@+id/habit_field_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/habit_field_3"
            style="@style/Widget.HabitTracker.HabitItemTextView"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_alignTop="@+id/habit_field_1"
            android:layout_alignBottom="@+id/habit_field_1"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="1dp"
            android:layout_marginEnd="108dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="sans-serif-medium"
            android:text="1.9"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@+id/habit_field_2"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>