<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    tools:context=".fragment.AboutFragment">


    <TextView
        android:id="@+id/project_title"
        style="@style/Widget.HabitTracker.TextView"
        android:layout_width="234dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_imageView"
        android:text="@string/project_title" />

    <TextView
        android:id="@+id/developer_introduction"
        style="@style/Widget.HabitTracker.TextView"
        android:layout_width="335dp"
        android:layout_height="184dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/project_title"
        android:text="@string/developer_intro" />

    <ImageView
        android:id="@+id/help_imageView"
        android:layout_width="375dp"
        android:layout_height="140dp"
        android:contentDescription="Help_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/about" />
</androidx.constraintlayout.widget.ConstraintLayout>